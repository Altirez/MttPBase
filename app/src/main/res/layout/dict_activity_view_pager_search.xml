<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".oldversion.dictionaries.DictViewPagerSearchActivity" android:background="@drawable/main_background">
    <com.logistic.paperrose.mttp.oldversion.utils.ExtendedEditText
        android:id="@+id/search"
        android:nextFocusUp="@id/search" android:nextFocusLeft="@id/search"
        android:layout_width="fill_parent"
        android:textSize="20dp"
        android:textColor="@color/secondary_color"
        android:drawableRight="@drawable/nd_search"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_margin="10dp"
        android:hint="Найти"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"/>
    <android.support.v4.view.ViewPager android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/viewPager">

     </android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <Button
            android:layout_width="match_parent" android:id="@+id/saveToFile" android:layout_weight="1" android:background="@drawable/main_background" android:text="Сохранить в файл"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="match_parent" android:id="@+id/actionSearch" android:layout_weight="1" android:background="@drawable/main_background" android:text="Найти по записи"
            android:layout_height="wrap_content" />
        </LinearLayout>

</LinearLayout>
