<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:orientation="horizontal" android:paddingTop="3dp" android:paddingBottom="3dp" >

    <Button android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/removeButton" android:background="@color/secondary_color" android:layout_margin="2dp" android:textColor="@color/main_color"
        android:text=" Remove "/>

    <LinearLayout android:orientation="vertical" android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"  android:id="@+id/arrows1"
        android:layout_height="wrap_content">
        <ImageView android:id="@+id/upItem" android:layout_width="40dp" android:scaleType="fitCenter" android:layout_height="25dp" android:src="@drawable/playlist_tile_drag_blue" android:layout_gravity="center_vertical"></ImageView>
    </LinearLayout>
    <RelativeLayout android:layout_gravity="center_vertical" android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp" android:layout_marginRight="3dp" >
        <CheckBox android:id="@+id/field" android:button="@null" android:textSize="20dp" android:text="test"
            android:drawableRight="@drawable/checkbox_style" android:textColor="@color/dark_text_color"
            android:layout_width="match_parent" android:checked="true"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

</LinearLayout>