<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <TextView android:padding="3dp" android:id="@+id/name"
        android:layout_width="match_parent"
        android:background="@null"
        android:layout_height="wrap_content" android:textColor="@color/dark_text_color"
        android:fontFamily="sans-serif-light" android:textSize="15dp" android:layout_weight="1" />

    <EditText android:padding="3dp" android:id="@+id/val" android:editable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:textSize="15dp" android:textColor="@color/dark_text_color" android:layout_weight="1"
        android:background="@null"
        android:clickable="true" android:longClickable="true" />
</LinearLayout>