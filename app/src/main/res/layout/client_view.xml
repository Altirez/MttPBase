<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView android:layout_gravity="center" android:paddingLeft="10dp" android:paddingRight="10dp" android:id="@+id/name"
        android:layout_width="match_parent" android:layout_weight="1" android:textSize="20dp"
        android:layout_height="wrap_content" android:text="" android:textColor="@color/dark_text_color"
        android:fontFamily="sans-serif-light"/>
    <CheckBox
        android:layout_width="wrap_content" android:id="@+id/isChecked" android:visibility="gone"
        android:layout_height="wrap_content" />
</LinearLayout>