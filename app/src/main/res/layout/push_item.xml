<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:background="@drawable/main_background">
    <View
        android:layout_width="fill_parent" android:id="@+id/topLine"
        android:layout_height="1dp"
        android:background="#aaaaaaaa" />
    <LinearLayout android:background="@null" android:id="@+id/rest" android:layout_below="@+id/topLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView android:id="@+id/title" android:visibility="gone"
            android:layout_width="match_parent" android:layout_weight="1" android:layout_marginLeft="15dp"
            android:layout_height="wrap_content" android:textSize="15dp" android:textColor="@color/main_color"
            android:textAlignment="textStart" android:layout_gravity="start" android:textStyle="bold" android:text="title"/>

        <TextView android:id="@+id/datetime" android:textColor="@color/dark_text_color"
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent" android:maxLines="1"
            android:layout_marginLeft="8px"
            android:layout_marginTop="8px"
            android:layout_marginBottom="8px"
            android:layout_marginRight="8px"
            android:layout_height="wrap_content" android:textSize="14dp"
            android:layout_gravity="center" android:text="date"/>
        </LinearLayout>
    <View android:layout_below="@+id/rest"
        android:layout_width="fill_parent" android:id="@+id/topLine2"
        android:layout_height="1dp"
        android:background="#aaaaaaaa" />
    <LinearLayout android:layout_below="@+id/topLine2" android:layout_marginBottom="15dp"

        android:layout_width="match_parent"  android:background="@null" android:id="@+id/bottom"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/description"
            android:textColor="@color/dark_text_color"
            android:layout_marginLeft="8px"
            android:layout_marginTop="8px"
            android:layout_marginBottom="8px"
            android:layout_marginRight="8px"
            android:fontFamily="sans-serif-light" android:textSize="14dp" android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="test"/>

    </LinearLayout>

</RelativeLayout>