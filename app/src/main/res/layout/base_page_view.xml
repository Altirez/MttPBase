<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView android:id="@+id/searchResult" android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_margin="8dp" android:divider="@null">
    </ListView>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:layout_width="match_parent" android:layout_weight="1"
            android:textSize="15dp"  android:layout_margin="1dp"
            android:layout_height="50dp" android:id="@+id/docsButton"
            android:text="Документы"

            android:background="@drawable/grey_background"/>
        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="2dp"></LinearLayout>
        <Button
            android:layout_width="match_parent" android:layout_weight="1"
            android:textSize="15dp"  android:layout_margin="1dp"
            android:layout_height="50dp" android:id="@+id/edButton" android:text="События ЭД"

            android:background="@drawable/grey_background"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent" android:visibility="gone" android:id="@+id/saveChangesButton" android:textColor="@color/secondary_color"
        android:layout_height="wrap_content" android:background="@null" android:textSize="15dp" android:text="Сохранить изменения"/>
</LinearLayout>