<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".oldversion.clients.ClientsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.logistic.paperrose.mttp.oldversion.utils.ExtendedEditText
            android:id="@+id/search"
            android:nextFocusUp="@id/search" android:nextFocusLeft="@id/search"
            android:layout_width="fill_parent"
            android:textSize="20dp"
            android:textColor="@color/secondary_color"
            android:drawableRight="@drawable/nd_search"
            android:layout_height="wrap_content"
            android:background="@drawable/light_grey_background"
            android:layout_margin="10dp"
            android:hint="НАЙТИ"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"  android:textColor="@color/dark_text_color"
            android:background="@drawable/grey_background" android:id="@+id/prev" android:visibility="visible"
            android:textStyle="bold"
            android:textSize="15dp" android:text="Показать предыдущие записи"/>

        <ListView android:layout_weight="1"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:id="@+id/clientList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">


            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/choices">
            </ListView>

        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp" android:id="@+id/next"
            android:background="@drawable/grey_background_bottom" android:textColor="@color/dark_text_color"
            android:textStyle="bold"
            android:visibility="visible" android:textSize="15dp" android:text="Показать следующие записи"/>

    </LinearLayout>

</RelativeLayout>
