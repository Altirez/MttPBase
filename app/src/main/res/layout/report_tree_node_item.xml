<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" android:descendantFocusability="blocksDescendants">

<!-- Embed ListView Item into a "parent" Layout -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent" android:descendantFocusability="blocksDescendants"
        android:id="@+id/parentLayout"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="25dp"
            android:id="@+id/topLevelNodeImage"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/add_beautiful_small"/>
        <TextView android:id="@+id/description" android:textStyle="bold" android:textColor="@color/secondary_color"
            android:layout_width="fill_parent" android:layout_margin="15dp" android:layout_weight="1"
            android:layout_height="wrap_content" android:textSize="22dp" android:text="Описание"/>
        <TextView android:id="@+id/count" android:textStyle="bold" android:textColor="@color/secondary_color"
            android:layout_width="60dp" android:layout_margin="15dp" android:text="234"
            android:layout_height="wrap_content" android:textSize="22dp"/>
    </LinearLayout>
</LinearLayout>