<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".oldversion.results.PhotoActivity">
    <LinearLayout
        android:layout_width="fill_parent" android:layout_weight="1"
        android:layout_height="fill_parent" android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent" android:textSize="20dp" android:gravity="center"
            android:layout_height="wrap_content"  android:text="Введите имя нового файла" android:layout_margin="10dp"/>
        <EditText
            android:layout_width="match_parent" android:textSize="20dp" android:background="@drawable/main_background" android:layout_margin="10dp" android:id="@+id/jpegName"
            android:layout_height="wrap_content" android:hint="Имя сохраняемого файла"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"/>
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:id="@+id/idDocNomenclature"
            android:textColor="@color/secondary_color"
            android:background="@drawable/main_background"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="Тип документа"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:layout_margin="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"/>
        <EditText
            android:layout_width="match_parent" android:textSize="20dp" android:background="@drawable/main_background" android:layout_margin="10dp" android:id="@+id/jpegNumber"
            android:layout_height="wrap_content" android:hint="Номер документа"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"/>
        <EditText
            android:layout_width="match_parent" android:textSize="20dp" android:background="@drawable/main_background" android:layout_margin="10dp" android:id="@+id/jpegDate"
            android:layout_height="wrap_content" android:hint="Дата документа"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">

        <Button android:layout_marginRight="5dp"
            android:text="Сохранить"
            android:background="@drawable/grey_background"
            android:clickable="true"
            android:onClick="sendPhoto"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="50dp">
        </Button>
        <Button
            android:text="Отмена"
            android:clickable="true"
            android:background="@drawable/grey_background"
            android:id="@+id/button1"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="50dp">
        </Button>
    </LinearLayout>
</LinearLayout>
