    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/top_color</item>
        <item name="android:height">60dp</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="displayOptions">showTitle</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:logo">@android:color/transparent</item>
        <!-- Support library compatibility -->
        <item name="background">@color/top_color</item>
        <item name="icon">@android:color/transparent</item>
        <item name="logo">@android:color/transparent</item>

    </style>


    <style name="MyActionBarTab" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
        <item name="android:background">@drawable/tab_selector</item>

    </style>

    <style name="spinnerItemStyle">
        <item name="android:background">@drawable/main_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondary_color</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:background">@drawable/main_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondary_color</item>
    </style>

</resources>